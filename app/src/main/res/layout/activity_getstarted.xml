<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEDDE"
    tools:context=".DaftarActivity">

    <ImageView
        android:id="@+id/undraw_desi"
        android:layout_width="284dp"
        android:layout_height="326dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/geststarted"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/be_confiden"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="410dp"
        android:gravity="center_horizontal|top"
        android:text="@string/be_confiden"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/aplikasi_in"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="468dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal|top"
        android:text="@string/aplikasi_in"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_getstarted"
        android:layout_width="283dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="623dp"
        android:backgroundTint="@drawable/button"
        android:fontFamily="@font/poppins_bold"
        android:hint="Get Started"
        android:textColorHint="@color/white"
        android:textSize="24sp" />


</RelativeLayout>



